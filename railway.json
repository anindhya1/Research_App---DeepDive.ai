{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "dockerfile"
    },
    "deploy": {
      "restartPolicyType": "on_failure",
      "startCommand": "gunicorn --worker-class gevent --workers 1 --worker-connections 1000 --timeout 300 --bind 0.0.0.0:$PORT wsgi:app"
    }
  }